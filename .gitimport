- remote: https://github.com/github/gitignore
  files:
    - source: Rails.gitignore
      target: .gitignore

- remote: https://github.com/omu/omu
  files:
    - source: .github
      target: .
    - source: etc/rubocop/rubocop.yml
      target: .rubocop_common.yml
    - source: lib/tasks/ci/audit.rake
    - source: lib/tasks/ci/brakeman.rake
    - source: lib/tasks/ci/gitimport.rake
    - source: lib/tasks/ci/liche.rake
    - source: lib/tasks/ci/markdownlint.rake
    - source: lib/tasks/ci/rubocop.rake
